---
import CV from '@/components/icons/CV.astro'

interface Props {
  isHomePage: boolean
}

const { isHomePage } = Astro.props

const BASE_URL = import.meta.env.BASE_URL
---

<header
  class="w-full px-2 py-1 mb-3 md:max-w-3xl sticky top-0 z-50 bg-slate-800 rounded-b-lg"
>
  <nav class="flex justify-end gap-4 items-center">
    <a
      class="text-zinc-200 transition-all duration-300 ease-linear cursor-pointer hover:scale-150"
      href={`${BASE_URL}printableCV`}
      target="_blank"
    >
      <CV />
    </a>
    <a
      href={BASE_URL}
      class={`${isHomePage && 'pointer-events-none'} max-w-16`}
    >
      <img
        src={`${BASE_URL}me.png`}
        alt=""
        transition:persist="header-image"
        class="rounded-full"
      />
    </a>
  </nav>
</header>
