---
import CV from '@/components/icons/CV.astro'
import GitHub2 from '../icons/GitHub2.astro'
import LinkedIn2 from '../icons/LinkedIn2.astro'

interface Props {
  isHomePage: boolean
}

const { isHomePage } = Astro.props

const BASE_URL = import.meta.env.BASE_URL
---

<header
  class="flex items-center justify-between 2xl:justify-around w-screen px-2 sm:px-4 py-2 mb-3 sticky top-0 z-50 bg-secondary text-primary rounded-b-lg"
>
  <h1 class="sr-only">Portfolio de Guillermo Ruiz</h1>
  <div class="flex items-center gap-4">
    <a
      href={BASE_URL}
      class={`${isHomePage && 'pointer-events-none'} max-w-16`}
    >
      <img
        src={`${BASE_URL}me.png`}
        alt=""
        transition:persist="header-image"
        class="rounded-full"
      />
    </a>
    <span class="hidden sm:inline-block uppercase text-4xl font-bold"
      >Codesthenos
    </span>
  </div>
  <nav class="flex justify-end gap-4 items-center">
    <a
      class="text-primary transition-all duration-300 ease-linear cursor-pointer hover:scale-150"
      href={`${BASE_URL}printableCV`}
      target="_blank"
    >
      <CV />
    </a>
    <a
      class="text-primary transition-all duration-300 ease-linear cursor-pointer hover:scale-150"
      href="https://github.com/codesthenos"
      target="_blank"
      rel="noopener noreferrer"
    >
      <GitHub2 />
    </a>
    <a
      class="text-primary transition-all duration-300 ease-linear cursor-pointer hover:scale-150"
      href="https://www.linkedin.com/in/codesthenos/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <LinkedIn2 />
    </a>
  </nav>
</header>
