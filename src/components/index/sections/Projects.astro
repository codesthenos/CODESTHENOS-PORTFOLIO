---
import GitHub from '@/components/icons/GitHub.astro'
import Section from '@/components/index/Section.astro'

import { projects } from '@cv'
---

<Section title="Proyectos">
  <ul class="grid grid-cols-[repeat(auto-fit,_minmax(200px,_1fr))] gap-4">
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article class="pb-4 shadow-[0_1px_1px_#f2f2f2] sm:shadow-none sm:border sm:border-gray-200 rounded-lg flex flex-col gap-4 p-4 h-full">
                <header class="flex-1">
                  <h3 class="font-sans mb-1 font-medium">
                    <a
                      class="text-gray-950 hover:underline"
                      href={url}
                      target="_blank"
                      title={`Ver el proyecto ${name}`}
                    >
                      {name}
                    </a>
                    <span class="hidden print:inline-block text-gray-400 text-xs">
                      https://www.{name.toLowerCase()}.com/
                    </span>
                    {isActive && (
                      <span class="text-green-500 animate-pulse print:animate-none">
                        •
                      </span>
                    )}
                    {github && (
                      <a
                        class="text-gray-950 hover:underline ml-1"
                        href={github}
                        target="_blank"
                        title={`Ver código fuente del proyecto ${name}`}
                      >
                        <GitHub />
                      </a>
                    )}
                  </h3>
                  <p class="text-gray-500 text-xs text-pretty mb-1">
                    {description}
                  </p>
                </header>
                <footer class="flex flex-wrap gap-1">
                  {highlights.map((highlight) => {
                    return (
                      <span class="text-[.6rem] text-gray-700 bg-gray-200 font-medium rounded-md py-1 px-2.5">
                        {highlight}
                      </span>
                    )
                  })}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>
