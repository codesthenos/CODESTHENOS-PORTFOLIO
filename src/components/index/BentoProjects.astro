---
import GitHub from '../icons/GitHub.astro'
import { getCollection } from 'astro:content'

const projects = await getCollection('projects')
---

<section
  class="max-w-xs mx-auto flex flex-col gap-2 sm:max-w-screen-sm sm:grid sm:grid-cols-2 sm:gap-2 md:grid md:grid-cols-4 md:gap-x-4 md:gap-y-6 md:max-w-3xl md:mx-auto rounded-lg p-2"
>
  {
    projects.map(({ data }) => (
      <div
        class={`${data.tailwindClasses} bg-gradient-to-b from-secondary/60 to-transparent group relative bg-contain md:hover:bg-gray-300 md:bg-no-repeat bg-center max-md:bg-gray-300 flex flex-col items-center justify-center p-2 rounded-2xl shadow-md transition-all duration-700 ease-in-out`}
      >
        <a href={`projects/${data.path}`}>
          <img
            src={data.image}
            alt={data.name}
            class="md:group-hover:opacity-50 max-md:opacity-50 opacity-0 absolute inset-0 w-full h-full object-cover z-0 rounded-2xl transition-opacity duration-700 ease-in-out"
          />
        </a>

        <h2 class="text-2xl font-black text-center z-10 text-primary uppercase transition-all duration-300 ease-linear hover:scale-110">
          <a href={`projects/${data.path}`}>{data.name}</a>
        </h2>

        <div class="flex justify-center gap-4 items-center w-full">
          <a
            href={data.github}
            class="mt-4 text-primary z-10 hover:scale-125 transition-all duration-300"
            target="_blank"
            rel="noopener noreferrer"
          >
            <GitHub />
          </a>
          <a
            href={data.url}
            class="text-sm uppercase mt-4 rounded-lg bg-primary text-secondary py-1 px-2.5 w-fit transition-all duration-300 ease-linear hover:scale-110 cursor-pointer z-10"
            target="_blank"
            rel="noopener noreferrer"
          >
            Ver proyecto
          </a>
        </div>
      </div>
    ))
  }
</section>
